{% extends 'basedashboard.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Count</th>
                <th>Type Reclamation</th>

                <th>Remboursement</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>{{ reclamation.count }}</td>
                    <td>{{ reclamation.TypeReclamation.type }}</td>
                <td>{{ reclamation.remboursement ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('rec_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('rec_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  <!--  <a href="{{ path('rec_new') }}">Create new</a>-->
{% endblock %}
